{
  "name": "berlyd-portfolio",
  "description": "Berly Dai's portfolio",
  "version": "0.0.1",
  "scripts": {
    "dev": "run-p watch:*",
    "watch:css": "postcss src/global.pcss -o static/global.css -w",
    "watch:dev": "sapper dev",
    "build": "run-s build:css build:sapper",
    "build:css": "NODE_ENV=production postcss src/global.pcss -o static/global.css",
    "build:sapper": "sapper build --legacy",
    "build:export": "sapper export --legacy",
    "export": "run-s build:css build:export",
    "start": "node __sapper__/build",
    "serve": "serve ___sapper__/export",
    "validate": "svelte-check --ignore src/node_modules/@sapper",
    "lint:css": "stylelint **/*.{css,html,js,md,mjs,svelte,svg,ts}"
  },
  "dependencies": {
    "autoprefixer": "^10.0.4",
    "compression": "^1.7.1",
    "cssnano": "^4.1.10",
    "polka": "next",
    "postcss": "^8.1.14",
    "postcss-load-config": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sirv": "^1.0.0",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@material/elevation": "^8.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@rollup/plugin-url": "^5.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/compression": "^1.7.0",
    "@types/node": "^14.11.1",
    "@types/polka": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.0",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sapper": "^0.28.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.17.3",
    "svelte-check": "^1.0.46",
    "svelte-preprocess": "^4.6.1",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
